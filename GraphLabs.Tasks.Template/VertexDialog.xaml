<sdk:ChildWindow x:Class="GraphLabs.Tasks.Template.VertexDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    Width="210" Height="268">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Info" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left" FontFamily="Portable User Interface" Grid.ColumnSpan="2"/>
        <ScrollViewer Background="White" HorizontalAlignment="Left" Height="169" Margin="0,32,0,0" VerticalAlignment="Top" Width="192" Grid.ColumnSpan="2">
            <StackPanel x:Name="VertexList" VerticalAlignment="Top"/>
        </ScrollViewer>
        <Button x:Name="CancelButton" Margin="0,206,2,0" Grid.Column="0" Click="Cancel_Button_Click"/>
        <Button x:Name="OkButton" Margin="2,206,0,0" Grid.Column="1" Click="Ok_Button_Click"/>
        
    </Grid>
</sdk:ChildWindow>
